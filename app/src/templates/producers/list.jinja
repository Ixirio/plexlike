{% extends "base.jinja" %}

{% import 'macro.jinja' as oo %}

{% set cardOptions = {
    'actions': {
        'isEditable'  : true,
        'isRemovable' : true,
    },
    'contentType': 'producers'
} %}


{% block title %}Producers{% endblock title %}

{% block body %}

    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-4 lg:grid-cols-6 gap-x-2 gap-y-6 transition-all duration-100" data-item-container>
        {% for producer in producers %}
            {{ oo.card(producer, cardOptions) }}
        {% endfor %}
    </div>

    <a href="{{ url_for('producers.add') }}" class="flex fixed rounded-full bottom-5 right-5 w-14 h-14 bg-secondary text-secondary">
        <svg fill="currentColor" class="w-8 h-8 m-auto" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512">
            <path d="M256 80c0-17.7-14.3-32-32-32s-32 14.3-32 32V224H48c-17.7 0-32 14.3-32 32s14.3 32 32 32H192V432c0 17.7 14.3 32 32 32s32-14.3 32-32V288H400c17.7 0 32-14.3 32-32s-14.3-32-32-32H256V80z"/>
        </svg>
    </a>

{% endblock body %}
{% extends "base.jinja" %}

{% import 'macro.jinja' as oo %}

{% block title %}Producers{% endblock title %}

{% set imageFormFieldOptions = {
  'label': 'Producer\'s picture',
  'entityType': 'producers',
  'entity' : producer
} %}

{% block body %}

<form action="{{ url_for('producers.add') if request.url_rule.endpoint == 'producers.add' else url_for('producers.edit', id=producer._id) }}" method="post" enctype="multipart/form-data" class="mx-auto w-full lg:w-4/6">
  <div class="space-y-12 text-secondary">
    <div class="border-b border-gray-900/10 pb-12 text-secondary">
      <h2 class="text-base font-semibold leading-7">About the producer</h2>

      <div class="mt-10 grid grid-cols-1 gap-x-6 gap-y-8 sm:grid-cols-6">
        <div class="sm:col-span-3">
          <label for="firstname" class="block text-sm font-medium leading-6">Producer's first name</label>
            <input type="text" name="firstname" id="firstname" required value="{% if producer %}{{ producer.firstName }}{% endif %}" placeholder="Producer's first name"
            class="block w-full text-secondary rounded-md border-0 py-1.5 text-gray-900 bg-gray-800 shadow-sm ring-1 ring-inset ring-opacity-50 ring-gray-500 focus:ring-2 focus:ring-inset focus:ring-primary sm:text-sm sm:leading-6 transition-all duration-300">
        </div>

        <div class="sm:col-span-3">
          <label for="lastname" class="block text-sm font-medium leading-6">Producer's last name</label>
            <input type="text" name="lastname" id="lastname" required value="{% if producer %}{{ producer.lastName }}{% endif %}" placeholder="Producer's last name"
            class="block w-full text-secondary rounded-md border-0 py-1.5 text-gray-900 bg-gray-800 shadow-sm ring-1 ring-inset ring-opacity-50 ring-gray-500 focus:ring-2 focus:ring-inset focus:ring-primary sm:text-sm sm:leading-6 transition-all duration-300">
        </div>

        {{ oo.imageFormField(imageFormFieldOptions) }}
      </div>
    </div>
  </div>

  {{ oo.submitButton() }}

</form>

{% endblock body %}
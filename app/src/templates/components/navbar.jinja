{% set desktop_active_class = 'text-md text-primary font-bold' %}
{% set desktop_unactive_class = 'text-md text-secondary font-bold hover:text-primary transition-all duration-100' %}
{% set smartphone_active_class = 'block p-4 text-sm font-bold text-primary bg-gray-800 rounded' %}
{% set smartphone_unactive_class = 'block p-4 text-sm font-bold text-secondary hover:text-primary hover:bg-gray-800 rounded transition-all duration-200' %}

{% set movieRelatedRoutes = [
	url_for('movies.findAll'),
	url_for('movies.add')
] %}

{% set actorRelatedRoutes = [
	url_for('actors.findAll'),
	url_for('actors.add')
] %}

<nav class="bg-primary px-4 py-4 flex justify-between items-center border-b border-[#212429] sticky top-0 z-10 transition-[width] duration-200">
	<a class="text-3xl font-bold leading-none text-secondary" href="{{ url_for('home') }}">PlexWish</a>
	<div class="lg:hidden">
		<button type="button" class="navbar-burger flex items-center text-secondary hover:text-primary transition-all">
			<svg class="block h-4 w-4 fill-current" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
				<path d="M0 3h20v2H0V3zm0 6h20v2H0V9zm0 6h20v2H0v-2z"></path>
			</svg>
			<span class="sr-only">open menu</span>
		</button>
	</div>
	<ul class="hidden absolute top-1/2 left-1/2 transform -translate-y-1/2 -translate-x-1/2 lg:flex lg:mx-auto lg:flex lg:items-center lg:w-auto lg:space-x-10">
		<li>
			<a class="{{ desktop_active_class if url_for('home') == request.path else desktop_unactive_class }}"
				href="{{ url_for('home') }}">Home</a>
		</li>
		<li>
			<a class="{{ desktop_active_class if request.path in movieRelatedRoutes else desktop_unactive_class }}"
				href="{{ url_for('movies.findAll') }}">Movies</a>
		</li>
		<li>
			<a class="{{ desktop_active_class if request.path in actorsRelatedRoutes else desktop_unactive_class }}"
				href="{{ url_for('actors.findAll') }}">Actors</a>
		</li>
	</ul>
